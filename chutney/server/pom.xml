    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-xjc-plugin</artifactId>
                <version>4.0.1</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>xsdtojava</goal>
                        </goals>
                        <configuration>
                            <sourceRoot>${basedir}/target/generated-sources/jaxb</sourceRoot>
                            <xsdOptions>
                                <xsdOption>
                                    <xsd>${basedir}/src/main/resources/surefire-test-report.xsd</xsd>
                                    <packagename>fr.enedis.chutney.execution.api.report.surefire</packagename>
                                </xsdOption>
                            </xsdOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>reserve-network-port</id>
                        <goals>
                            <goal>reserve-network-port</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <portNames>
                                <portName>jmx.port.chutney-server</portName>
                            </portNames>
                            <randomPort>true</randomPort>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${springboot.version}</version>
                <configuration>
                    <jmxPort>${jmx.port.chutney-server}</jmxPort>
                </configuration>
                <executions>
                    <execution>
                        <id>fatjar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                        <configuration>
                            <attach>false</attach>
                            <classifier>${chutney.boot-jar.classifier}</classifier>
                            <executable>true</executable>
                            <layout>ZIP</layout>
                            <mainClass>${mainClass}</mainClass>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-start</id>
                        <phase>test</phase>
                        <goals>
                            <goal>start</goal>
                        </goals>
                        <configuration>
                            <skip>${skip-server-start-stop-and-docker-build}</skip>
                            <wait>2000</wait>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-stop</id>
                        <phase>test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                        <configuration>
                            <skip>${skip-server-start-stop-and-docker-build}</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>docker-test-build</id>
                        <phase>package</phase>
                        <goals>
                            <goal>build-image-no-fork</goal>
                        </goals>
                        <configuration>
                            <skip>${skip-server-start-stop-and-docker-build}</skip>
                            <classifier>boot</classifier>
                            <pullPolicy>IF_NOT_PRESENT</pullPolicy>
                            <image>
                                <name>${acceptance-tests-docker-image-name}</name>
                                <runImage>eclipse-temurin:${maven.compiler.target}-jre</runImage>
                                <env>
                                    <BP_JVM_VERSION>${maven.compiler.target}</BP_JVM_VERSION>
                                </env>
                            </image>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-boot-jar-locally</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <file>${project.build.directory}/${project.artifactId}-${project.version}-${chutney.boot-jar.classifier}.jar</file>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>${project.artifactId}</artifactId>
                            <version>${project.version}</version>
                            <classifier>${chutney.boot-jar.classifier}</classifier>
                            <packaging>jar</packaging>
                            <pomFile>${project.file}</pomFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>behind-proxy</id>
            <activation>
                <property>
                    <name>http.proxyHost</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-maven-plugin</artifactId>
                        <configuration>
                            <image>
                                <env>
                                    <http_proxy>http://${http.proxyHost}:${http.proxyPort}</http_proxy>
                                    <https_proxy>http://${https.proxyHost}:${https.proxyPort}</https_proxy>
                                </env>
                            </image>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>skip-start-stop-docker-build-when-maven.test.skip</id>
            <activation>
                <property>
                    <name>maven.test.skip</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <skip-server-start-stop-and-docker-build>true</skip-server-start-stop-and-docker-build>
            </properties>
        </profile>
        <profile>
            <id>skip-start-stop-docker-build-when-skipTests</id>
            <activation>
                <property>
                    <name>skipTests</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <skip-server-start-stop-and-docker-build>true</skip-server-start-stop-and-docker-build>
            </properties>
        </profile>
    </profiles>
