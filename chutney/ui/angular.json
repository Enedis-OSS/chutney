{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "chutney": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "chutney",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/chutney",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "tsconfig.chutney.json",
            "polyfills": [
              "zone.js"
            ],
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/favicon.ico",
              { "glob": "**/*", "input": "node_modules/monaco-editor", "output": "/assets/monaco/" }
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/assets/style"
              ]
            },
            "styles": [
              "src/assets/style/style.scss",
                {
                    "input": "src/assets/style/themes/theme.flatly.scss",
                    "bundleName": "flatly",
                    "inject": true
                },
                {
                    "input": "src/assets/style/themes/theme.darkly.scss",
                    "bundleName": "darkly",
                    "inject": false
                }
            ],
            "scripts": [
                "node_modules/@asciidoctor/core/dist/browser/asciidoctor.min.js",
                "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
            ],
              "allowedCommonJsDependencies": [
                  "raf",
                  "rgbcolor",
                  "moment",
                  "jspdf-autotable",
                  "jszip",
                  "ace-builds",
                  "hjson",
                  "core-js",
                  "file-saver"

              ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "proxyConfig": "proxy.conf.json",
            "ssl": true,
            "buildTarget": "chutney:build",
          },
          "configurations": {
            "production": {
            "buildTarget": "chutney:build:production"
            },
            "development": {
              "buildTarget": "chutney:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "chutney:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/assets/style"
              ]
            },
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/favicon.ico",
              { "glob": "**/*", "input": "node_modules/monaco-editor", "output": "/assets/monaco/" }
            ],
            "styles": [
               "src/assets/style/style.scss"
            ],
            "scripts": [
            ]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
